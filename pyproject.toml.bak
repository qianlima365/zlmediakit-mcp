[build-system]
requires = ["poetry-core>=1.0.0"]
build-backend = "poetry.core.masonry.api"

[tool.poetry]
name = "zlmediakit-mcp"
version = "0.1.0"
description = "ZLMediaKit Media Control Panel - 一个用于管理ZLMediaKit服务器的控制面板"
authors = ["Your Name <your.email@example.com>"]
readme = "README.md"
packages = [{include = "zlmediakit_mcp"}]
license = "MIT"
homepage = "https://github.com/yourusername/zlmediakit-mcp"
repository = "https://github.com/yourusername/zlmediakit-mcp"
keywords = ["zlmediakit", "media-server", "streaming", "rtmp", "rtsp", "http-flv"]
classifiers = [
    "Development Status :: 4 - Beta",
    "Intended Audience :: Developers",
    "License :: OSI Approved :: MIT License",
    "Programming Language :: Python :: 3.12",
    "Topic :: Multimedia :: Video",
    "Topic :: System :: Systems Administration"
]

[tool.poetry.dependencies]
python = ">=3.12"
aiohttp = ">=3.8.0"
requests = ">=2.26.0"
python-dotenv = ">=0.19.0"
typing-extensions = ">=4.8.0"
httpx = ">=0.27.1"
mcp = {extras = ["cli"], version = ">=1.6.0"}

[tool.poetry.group.dev.dependencies]
pytest = "^7.4.0"
pytest-asyncio = "^0.21.0"
black = "^23.7.0"
isort = "^5.12.0"
flake8 = "^6.1.0"
mypy = "^1.5.0"

[tool.poetry.scripts]
zlmediakit-mcp = "zlmediakit_mcp.main:main"
